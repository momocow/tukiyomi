{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2018",
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    // Change this to 'es6' once everything is going with Webpack
    "module": "commonjs",
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ]
}